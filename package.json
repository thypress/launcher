{
  "name": "thypress",
  "version": "0.3.0",
  "description": "Dead simple markdown blog/docs engine",
  "type": "module",
  "bin": {
    "thypress": "./src/cli.js"
  },
  "files": [
    "src/",
    "templates/"
  ],
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "predev": "bun src/embed-templates.js",
    "dev": "bun src/cli.js serve",
    "build:static": "bun src/cli.js build",
    "prebuild:exe": "bun src/embed-templates.js",
    "build:exe": "bun src/build-exe.js",
    "build:exe:all": "bun src/build-exe.js win32,darwin,linux"
  },
  "dependencies": {
    "@zip.js/zip.js": "^2.3.18",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "highlight.js": "^11.9.0",
    "htmlparser2": "^10.0.0",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-container": "^4.0.0",
    "markdown-it-github-alerts": "^1.0.1",
    "markdown-it-highlightjs": "^4.0.1",
    "sharp": "^0.33.0",
    "sitemap": "^7.1.1"
  },
  "keywords": [
    "blog",
    "markdown",
    "static-site",
    "docs",
    "generator",
    "ssg"
